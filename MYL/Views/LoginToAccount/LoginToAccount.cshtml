@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "LoginToAccount";
    Layout = "_Layout";
}
@model MYL.ViewModels.UserLogin

<link href="~/css/nulstyle.css" rel="stylesheet" />
<link href="~/css/Login.css" rel="stylesheet" />
<div class="background__image">
    <img src="~/img/16846.jpg">
</div>
<div class="begin">
    <form asp-action="LoginToAccount" asp-controller="LoginToAccount">
        <div class="main-content">
            <div class="head-form">
                <h1>LogIn</h1>
            </div>
            <div class="inputs">
                <div class="UserName">
                    <i class="fa-solid fa-user"></i>
                    <input type="text" asp-for="Username" placeholder="User name">
                </div>
                <span asp-validation-for="Username"></span>
                <div class="Password">
                    <i class="fa-solid fa-key"></i>
                    <input type="password" asp-for="Password" name="password" placeholder="Password" id="pwd">
                    <i class="fa-solid fa-eye"></i>
                </div>
                <span asp-validation-for="Password"></span>
                <div class="button_login">
                    <button class="login_acc" type="submit" name="name" value="ВОЙТИ">Log in</button>
                </div>
                    <div class="button_pasfog">
                        <button class="pas_forgot">Forgot Password</button>
                    </div>
            </div>
         
            <div class="g-recaptcha" data-sitekey="6Lf9jjcgAAAAAN1gZoZH_TI50BvtCKMHUvoXf05D" data-callback="verifyCaptcha"></div>
            <div id="g-recaptcha-error"></div>
            <script src='https://www.google.com/recaptcha/api.js'></script>
            <script>
                var recaptcha_response = '';
                function submitUserForm() {
                    if (recaptcha_response.length == 0) {
                        document.getElementById('g-recaptcha-error').innerHTML = '<span class="text1 field-validation-error">Это обязательное поле</span>';
                        return false;
                    }
                    return true;
                }

                function verifyCaptcha(token) {
                    recaptcha_response = token;
                    document.getElementById('g-recaptcha-error').innerHTML = '';
                }
            </script>
        </div>
    </form>
</div>

<script src="~/js/Login.js"></script>

