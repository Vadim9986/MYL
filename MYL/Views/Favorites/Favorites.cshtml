@using MYL.Models
@model IEnumerable<Favorite>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Favorite";
    Layout = "_Layout";
}
<link href="~/css/nulstyle.css" rel="stylesheet" />
<link href="~/css/Favorite.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
 <div class="background__image"><img src="~/img/background-g58d1214df_1920.jpg">
    </div>
    <div class="main_content">
        <div class="welcome_block">
            <h1>Favorites</h1>
        </div>
        <div class="row">
            @foreach (Favorite u in Model)
{
        <div class="user_block">
<a asp-action="UserQuestionary" asp-controller="MyQuestionary" asp-route-id="@u.User.Id">
            <div class="photo_block">
                @if (u.Questionary.Avatar is null && u.Questionary.Gen == "Male")
                {
                    <img src="~/img/Man new.png"/>
                }
                else if (u.Questionary.Avatar is null && u.Questionary.Gen == "Female")
                {
                    <img src="~/img/Women new.png"/>
                }
                else
                {
                    <img src="data:image/jpeg;base64,@(Convert.ToBase64String(u.Questionary.Avatar))">
                }
            </div>
</a>
            <div class="user_info">
                @u.Questionary.Name
                <br />
                @u.Questionary.Surname
                <br />
                @u.Questionary.Age
            </div>
             <div class="button_delete">
                    <button type="submit">
                        Delete
                    </button>
                </div>
        </div>
    }
            </div>
        </div>